@model List<Student>



<div>
    <a asp-action="Add" class="btn btn-primary">
        <i class="bi bi-patch-plus-fill"></i> Add Student
    </a>
</div>

<div>
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>FullName</th>
            <th>Age</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
        @foreach (var stu in Model)
        {
            <tr>
                <td>@stu.Id</td>
                <td>@stu.FullName</td>
                <td>@stu.Age</td>
                <td>@stu.Mail</td>
                <td>
                    <a asp-action="Update" asp-route-id="@stu.Id">
                        <i class="bi bi-pencil"></i> Update
                    </a>
                    <a asp-action="Delete" asp-route-id="@stu.Id">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </table>
</div>