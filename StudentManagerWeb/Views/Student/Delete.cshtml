@model  Student

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <h2 class="alert alert-danger">Confirm to Delete Student</h2>
    <hr />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="FullName" disabled class="form-control" />
    </div>
    <div class="form-group">
        <label>Age</label>
        <input asp-for="Age" disabled class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Mail" disabled class="form-control" />
    </div>
    <button type="submit" class="btn btn-danger"> Delete </button>
    <a asp-action="Index" class="btn btn-secondary">Back to Student List</a>
</form>